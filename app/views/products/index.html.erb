<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Sku</th>
      <th>Price</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.name, edit_product_path(product) %></td>
        <td><%= product.sku_id %></td>
        <td><%= product.price %></td>
        <%image_path = product.try(:pictures).first.present? ? product.pictures.first.image.url(:thumb) : "/assets/default.jpg"%>
        <td><%= image_tag image_path %></td>
        <!--<td><%#= link_to 'Show', product %></td>-->
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

